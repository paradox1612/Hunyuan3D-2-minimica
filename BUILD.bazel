load("@io_bazel_rules_docker//container:container.bzl", "container_image")
load("@io_bazel_rules_docker//python:image.bzl", "py_image")
load("@pip_deps//:requirements.bzl", "requirement")

# Main Python application
py_library(
    name = "hunyuan3d_lib",
    srcs = glob([
        "*.py",
        "hy3dgen/**/*.py",
    ]),
    data = [
        "requirements.txt",
        "//hy3dgen/texgen/custom_rasterizer:custom_rasterizer_extension",
    ],
    deps = [
        requirement("diffusers"),
        requirement("einops"),
        requirement("opencv-python"),
        requirement("numpy"),
        requirement("torch"),
        requirement("transformers"),
        requirement("torchvision"),
        requirement("omegaconf"),
        requirement("tqdm"),
        requirement("trimesh"),
        requirement("pymeshlab"),
        requirement("pygltflib"),
        requirement("xatlas"),
        requirement("accelerate"),
        requirement("gradio"),
        requirement("fastapi"),
        requirement("uvicorn"),
        requirement("rembg"),
        requirement("onnxruntime"),
    ],
    visibility = ["//visibility:public"],
)

# Custom rasterizer C++ extension
cc_library(
    name = "custom_rasterizer_lib",
    srcs = glob([
        "hy3dgen/texgen/custom_rasterizer/lib/custom_rasterizer_kernel/*.cpp",
        "hy3dgen/texgen/custom_rasterizer/lib/custom_rasterizer_kernel/*.cu",
    ]),
    hdrs = glob([
        "hy3dgen/texgen/custom_rasterizer/lib/custom_rasterizer_kernel/*.h",
    ]),
    copts = [
        "-std=c++14",
        "-DWITH_CUDA",
    ],
)

# Python extension for custom rasterizer
py_library(
    name = "custom_rasterizer_extension",
    srcs = glob([
        "hy3dgen/texgen/custom_rasterizer/custom_rasterizer/*.py",
    ]),
    deps = [":custom_rasterizer_lib"],
)

# Main application binary
py_binary(
    name = "generate_mv_enhanced",
    srcs = ["generate_mv_enhanced.py"],
    deps = [":hunyuan3d_lib"],
    main = "generate_mv_enhanced.py",
)

# API server binary
py_binary(
    name = "api_server",
    srcs = ["api_server.py"],
    deps = [":hunyuan3d_lib"],
    main = "api_server.py",
)

# Docker container image
container_image(
    name = "hunyuan3d_image",
    base = "@cuda_base//image",
    cmd = ["python3", "generate_mv_enhanced.py"],
    directory = "/app",
    files = [
        ":hunyuan3d_lib",
        ":generate_mv_enhanced",
        "requirements.txt",
    ] + glob([
        "assets/**/*",
        "hy3dgen/**/*",
    ]),
    ports = ["8000"],
    workdir = "/app",
    # Install system dependencies
    run_commands_tar = ":install_deps.tar",
    env = {
        "HY3DGEN_MODELS": "/app/model-cache",
        "PYTHONPATH": "/app",
    },
)

# System dependencies installation
genrule(
    name = "install_deps",
    outs = ["install_deps.tar"],
    cmd = """
        mkdir -p tmp_install
        cat > tmp_install/install.sh << 'EOF'
